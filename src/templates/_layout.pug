mjml
    //- Head
    mj-head
        mj-title Become European Citizen by Easy Property Investment
        mj-font(name='Montserrat' href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap")
        mj-raw.
            <meta charset="UTF-8">
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='"Montserrat", Arial, Helvetica, sans serif')/
            mj-class(name='T32-300' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='32px' line-height='50px' font-weight='300')/
            
            mj-class(name='T30-700' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='30px' line-height='34px' font-weight='700')/
            mj-class(name='T30-500' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='30px' line-height='20px' font-weight='500')/
            mj-class(name='T28-700' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='28px' line-height='34px' font-weight='700')/
            mj-class(name='T28-500' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='28px' line-height='34px' font-weight='500')/
            mj-class(name='T20-700' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='20px' line-height='34px' font-weight='700')/
            mj-class(name='T16-400' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='16px' line-height='22px' font-weight='400')/
            mj-class(name='T15-900' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='15px' line-height='20px' font-weight='900')/
            mj-class(name='T15-400' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='15px' line-height='20px' font-weight='400')/
            mj-class(name='T14-400' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='14px' line-height='20px' font-weight='400')/
            mj-class(name='T13-400' font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='13px' line-height='20px' font-weight='400')/
            mj-button(padding="0" inner-padding="10px 10px" font-family='"Montserrat", Arial, Helvetica, sans-serif' font-style="normal" font-size='16px' line-height='20px' font-weight='700' text-transform="capitalize")
            //- Black colors text
            mj-class(name="cT2" color="#D8D9DA")/
            mj-class(name="bgT2" background-color="#D8D9DA")/
            mj-class(name="cT1" color="#2c262d")/
            mj-class(name="bgT1" background-color="#2c262d")
            mj-class(name="cT0" color="#000000")/
            mj-class(name="bg0" background-color="#000000")/
            mj-class(name="cTW" color="#ffffff")/
            mj-class(name="bgW" background-color="#ffffff")/
            //- Colors
            mj-class(name="cR" color="#D90A7B")/
            mj-class(name="bgR" background-color="#D90A7B")/
            mj-class(name="cBf" color="#071C35")/
            mj-class(name="bgBf" background-color="#071C35")/
        mj-breakpoint(width="480px")
    //- Body
    mj-body(background-color='#ffffff' width="650px")
        //- content
        block content
        //- bloc header
        block header
            include ../includes/_header
        //- bloc argument 1
        block argument-1 
            include ../includes/_argument-1 
        //- bloc argument 2
        block argument-2 
            include ../includes/_argument-2 
        //- bloc cost
        block cost
            include ../includes/_cost
        //- bloc footer
        block footer
            include ../includes/_footer